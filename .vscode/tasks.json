{
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            // build app and corresponding docker images (default: windows)
            "taskName": "rebuild and start containers",
            // use bash to run multiple commands at the same time
            "command": "powershell",
            "isShellCommand": true,
            "args": [
                // restore and build app (put this 2 lines for every app you want to build)
               "dotnet restore ${workspaceRoot}/CloudBedlam/CloudBedlam.csproj;",
               "dotnet publish ${workspaceRoot}/CloudBedlam/CloudBedlam.csproj -c Debug;",
               "docker-compose -f docker-compose.yml -f docker-compose.debug.yml build;",
                // rebuild and recreate containers from docker-compose files
                "docker-compose -f docker-compose.yml -f docker-compose.debug.yml up -d --force-recreate --remove-orphans"
            ],
            // command override for linux
            "linux": {
                "command": "bash"
            },
            // command override for linux
            "osx": {
                "command": "bash"
            },
            "isBuildCommand": true,
            "echoCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Install VsDbg",
            "command": "powershell",
            "args":[
                ".\\.vscode\\GetVsDbg.ps1 -Version latest -RuntimeID ubuntu.16.04-x64 -InstallPath .\\vsdbg -RemoveExistingOnUpgrade"
            ],
            "isShellCommand": true,
            "echoCommand": true
        }
    ]
}